{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
		"incremental": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/example_config.json"]
}